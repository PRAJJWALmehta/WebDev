        <div class="container">
          <!-- ======= Donate Section ======= -->
          <section id="why-us" class="why-us section-bg">
            <div class="container-fluid" data-aos="fade-up">
              <div class="row">
                <div
                  class="col-lg-7 d-flex flex-column justify-content-center align-items-stretch order-2 order-lg-1"
                >
                  <div class="content">
                    <h3>
                      Lend a helping hand by,
                      <strong>Donating</strong>
                    </h3>
                    <p>Fill the form below to donate</p>
                  </div>

                  <div class="accordion-list">
                    <form>
                      <label for="fname">First name:</label><br />
                      <input
                        type="text"
                        id="fname"
                        name="fname"
                        style="
                          border: none;
                          border-bottom: 2px solid #4668a2;
                          background-color: #b2cdea;
                        "
                      /><br /><br />
                      <label for="lname">Last name:</label><br />
                      <input
                        type="text"
                        id="lname"
                        name="lname"
                        style="
                          border: none;
                          border-bottom: 2px solid #4668a2;
                          background-color: #b2cdea;
                        "
                      /><br /><br />
                      <label for="email">Email:</label><br />
                      <input
                        type="text"
                        id="email"
                        name="email"
                        style="
                          border: none;
                          border-bottom: 2px solid #4668a2;
                          background-color: #b2cdea;
                        "
                      /><br /><br />
                      <label for="amount">Amount:</label><br />
                      <input
                        type="text"
                        id="amount"
                        name="amount"
                        style="
                          border: none;
                          border-bottom: 2px solid #4668a2;
                          background-color: #b2cdea;
                        "
                      /><br /><br />

                      <input
                        type="button"
                        value="submit"
                        style="
                          background-color: #47b2e4;
                          border-radius: 4px;
                          font-size: 16px;
                          border: 2px solid #47b2e4;
                        "
                      />
                    </form>
                  </div>
                </div>

                <div
                  class="col-lg-5 align-items-stretch order-1 order-lg-2 img"
                  style="background-image: url('assets/img/donate-img.png')"
                  data-aos="zoom-in"
                  data-aos-delay="150"
                >
                  &nbsp;
                </div>
              </div>
            </div>
